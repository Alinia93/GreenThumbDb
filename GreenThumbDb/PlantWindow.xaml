<Window x:Class="GreenThumbDb.PlantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenThumbDb"
        mc:Ignorable="d"
        Title="PlantWindow" Height="450" Width="800">
    <Grid>
       
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>

            <Image Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4" Grid.RowSpan="6" Margin="100,5" Opacity="0.2">
                <Image.Source>

                    <BitmapImage UriSource="C:\Users\alini\OneDrive\Skrivbord\Databasutveckling\Slutuppgift\GreenThumbDb\GreenThumbDb\pictures\FrontPicture.png"/>
                </Image.Source>

            </Image>
            <Label Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" Content="GREEN THUMB" FontSize="50" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" FontWeight="Bold" FontFamily="Bahnschrift Condensed" Foreground="#FF125600"/>
        <Label Content="Choose a plant: " Grid.Column="1" Grid.Row="2" FontSize="17" FontFamily="Sylfaen" />
        <ComboBox Name="cmbPlants" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Margin="150,0,0,20" />

        <Button Name ="btnSearchForPlant" Grid.Column="3" Grid.Row="3" Margin="10,0,100,20" Content="Search" Click="btnSearchForPlant_Click"/>

        <Label Content="Or search for plant: " Grid.Column="1" Grid.Row="3" FontSize="17" FontFamily="Sylfaen" />
        <TextBox Name ="txtSearchPlant" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Margin="150,0,0,20"/>

        <Button Name ="btnDetails" Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="2" Margin="120,0,25,20"  Content="See details/Add plant to your garden"   FontSize="10" Click="btnDetails_Click"/>
        <Button Name ="btnDelete" Grid.Column="3" Grid.Row="4" Grid.ColumnSpan="2" Margin="120,0,170,20"  Content="Delete plant" FontSize="10"/>
        <Button Grid.Column="1" Grid.Row="4"   Content="Add new plant!"   FontSize="18" Click="Button_Click"/>
        <Button Name="btnGoBack" Grid.Column="4" Grid.Row="6" Margin="10" Content="Go back" Click="btnGoBack_Click"/>
        <Button  Margin="20,0,20,0" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="ForestGreen" BorderBrush="Black" BorderThickness="1" CornerRadius="25">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <TextBlock Text="GO TO YOUR GARDEN"  FontFamily="Segoe Print" FontSize="20"/>
        </Button>

    </Grid>
</Window>
